{
  "name": "lsp-inspector-webview",
  "preview": true,
  "description": "LSP Inspector Webview",
  "version": "0.0.2",
  "publisher": "octref",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/Microsoft/language-server-protocol-inspector.git"
  },
  "engines": {
    "vscode": "^1.49.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:lspInspector.start",
    "onWebviewPanel:lspInspector"
  ],
  "main": "./dist/extension",
  "contributes": {
    "commands": [{
      "command": "lspInspector.start",
      "title": "Start LSP Inspector",
      "category": "LSP Inspector"
    }],
    "configuration": [{
      "title": "LSP Inspector Config",
      "properties": {
        "lspInspector.port": {
          "type": "number",
          "default": 7000,
          "description": "The port on which the websocket server listens to"
        }
      }
    }]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "dependencies": {
    "ws": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^12.0.0",
    "@types/ws": "^6.0.0",
    "@types/vscode": "^1.49.0",
    "typescript": "^4.1.3"
  }
}
